---
/**
 * UpdatedDailyBadge - Prominent indicator showing data is refreshed daily
 * Important for SEO and user trust
 *
 * @param variant - 'hero' | 'inline' | 'footer'
 * @param lastUpdated - Optional date string to show specific update time
 */
interface Props {
  variant?: 'hero' | 'inline' | 'footer';
  lastUpdated?: string;
}

const { variant = 'inline', lastUpdated } = Astro.props;

const formatDate = (dateStr: string) => {
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });
};
---

{variant === 'hero' && (
  <div class="updated-daily updated-daily-hero">
    <div class="updated-daily-icon">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M15.312 11.424a5.5 5.5 0 01-9.201 2.466l-.312-.311h2.433a.75.75 0 000-1.5H3.989a.75.75 0 00-.75.75v4.242a.75.75 0 001.5 0v-2.43l.31.31a7 7 0 0011.712-3.138.75.75 0 00-1.449-.39zm1.23-3.723a.75.75 0 00.219-.53V2.929a.75.75 0 00-1.5 0v2.43l-.31-.31A7 7 0 003.239 8.188a.75.75 0 101.448.389A5.5 5.5 0 0113.89 6.11l.311.31h-2.432a.75.75 0 000 1.5h4.243a.75.75 0 00.53-.219z" clip-rule="evenodd" />
      </svg>
    </div>
    <div class="updated-daily-content">
      <span class="updated-daily-label">Prices Updated Daily</span>
      <span class="updated-daily-sublabel">
        Automated pipeline refreshes data every 24 hours
        {lastUpdated && <span class="updated-daily-date"> | Last: {formatDate(lastUpdated)}</span>}
      </span>
    </div>
  </div>
)}

{variant === 'inline' && (
  <div class="updated-daily updated-daily-inline" title={lastUpdated ? `Last updated: ${formatDate(lastUpdated)}` : 'Updated daily'}>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="updated-daily-icon-sm" aria-hidden="true">
      <path fill-rule="evenodd" d="M15.312 11.424a5.5 5.5 0 01-9.201 2.466l-.312-.311h2.433a.75.75 0 000-1.5H3.989a.75.75 0 00-.75.75v4.242a.75.75 0 001.5 0v-2.43l.31.31a7 7 0 0011.712-3.138.75.75 0 00-1.449-.39zm1.23-3.723a.75.75 0 00.219-.53V2.929a.75.75 0 00-1.5 0v2.43l-.31-.31A7 7 0 003.239 8.188a.75.75 0 101.448.389A5.5 5.5 0 0113.89 6.11l.311.31h-2.432a.75.75 0 000 1.5h4.243a.75.75 0 00.53-.219z" clip-rule="evenodd" />
    </svg>
    <span class="updated-daily-text">Updated Daily</span>
  </div>
)}

{variant === 'footer' && (
  <div class="updated-daily updated-daily-footer">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="updated-daily-icon-sm" aria-hidden="true">
      <path fill-rule="evenodd" d="M15.312 11.424a5.5 5.5 0 01-9.201 2.466l-.312-.311h2.433a.75.75 0 000-1.5H3.989a.75.75 0 00-.75.75v4.242a.75.75 0 001.5 0v-2.43l.31.31a7 7 0 0011.712-3.138.75.75 0 00-1.449-.39zm1.23-3.723a.75.75 0 00.219-.53V2.929a.75.75 0 00-1.5 0v2.43l-.31-.31A7 7 0 003.239 8.188a.75.75 0 101.448.389A5.5 5.5 0 0113.89 6.11l.311.31h-2.432a.75.75 0 000 1.5h4.243a.75.75 0 00.53-.219z" clip-rule="evenodd" />
    </svg>
    <span>Pricing data updated daily</span>
    {lastUpdated && <span class="updated-daily-date">| Last sync: {formatDate(lastUpdated)}</span>}
  </div>
)}

<style>
  /* Hero variant - large prominent display */
  .updated-daily-hero {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.5rem;
    background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
    border: 1px solid #a7f3d0;
    border-radius: 1rem;
    box-shadow: 0 2px 8px rgba(16, 185, 129, 0.1);
  }

  .updated-daily-hero .updated-daily-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    border-radius: 0.75rem;
    color: white;
    flex-shrink: 0;
  }

  .updated-daily-hero .updated-daily-icon svg {
    width: 1.5rem;
    height: 1.5rem;
  }

  .updated-daily-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .updated-daily-label {
    font-size: 1.125rem;
    font-weight: 700;
    color: #065f46;
    letter-spacing: -0.01em;
  }

  .updated-daily-sublabel {
    font-size: 0.875rem;
    color: #047857;
  }

  .updated-daily-date {
    color: #059669;
  }

  /* Inline variant - compact badge */
  .updated-daily-inline {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
    border: 1px solid #a7f3d0;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 600;
    color: #065f46;
    box-shadow: 0 1px 3px rgba(16, 185, 129, 0.08);
    transition: all 0.2s ease;
  }

  .updated-daily-inline:hover {
    box-shadow: 0 2px 8px rgba(16, 185, 129, 0.15);
    transform: translateY(-1px);
  }

  .updated-daily-icon-sm {
    width: 1rem;
    height: 1rem;
    color: #10b981;
  }

  .updated-daily-text {
    color: #065f46;
  }

  /* Footer variant */
  .updated-daily-footer {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-text-light);
  }

  .updated-daily-footer .updated-daily-icon-sm {
    color: #10b981;
  }

  .updated-daily-footer .updated-daily-date {
    color: var(--color-text-muted, #9ca3af);
  }

  /* Dark mode */
  @media (prefers-color-scheme: dark) {
    .updated-daily-hero {
      background: linear-gradient(135deg, #064e3b 0%, #065f46 100%);
      border-color: #047857;
    }

    .updated-daily-label {
      color: #d1fae5;
    }

    .updated-daily-sublabel {
      color: #a7f3d0;
    }

    .updated-daily-date {
      color: #6ee7b7;
    }

    .updated-daily-inline {
      background: linear-gradient(135deg, #064e3b 0%, #065f46 100%);
      border-color: #047857;
      color: #d1fae5;
    }

    .updated-daily-inline .updated-daily-icon-sm {
      color: #6ee7b7;
    }

    .updated-daily-text {
      color: #d1fae5;
    }
  }

  @media (max-width: 768px) {
    .updated-daily-hero {
      padding: 0.875rem 1.25rem;
    }

    .updated-daily-hero .updated-daily-icon {
      width: 2.5rem;
      height: 2.5rem;
    }

    .updated-daily-hero .updated-daily-icon svg {
      width: 1.25rem;
      height: 1.25rem;
    }

    .updated-daily-label {
      font-size: 1rem;
    }

    .updated-daily-sublabel {
      font-size: 0.8125rem;
    }
  }
</style>
