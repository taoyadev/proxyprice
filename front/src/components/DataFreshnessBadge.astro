---
/**
 * DataFreshnessBadge - Shows provider verification status with data freshness indicator
 *
 * @param hasComparablePricing - Whether provider has verified comparable pricing
 * @param lastUpdated - Date string when data was last updated
 * @param variant - 'full' | 'compact' | 'minimal'
 */
interface Props {
  hasComparablePricing: boolean;
  lastUpdated?: string;
  variant?: 'full' | 'compact' | 'minimal';
}

const {
  hasComparablePricing,
  lastUpdated,
  variant = 'compact',
} = Astro.props;

// Parse the date and calculate freshness level
const getFreshnessInfo = (dateStr: string | undefined) => {
  if (!dateStr) {
    return { level: 'unknown', text: 'Not verified', days: null };
  }

  const date = new Date(dateStr);
  const now = new Date();
  const diffMs = now.getTime() - date.getTime();
  const diffDays = Math.floor(diffMs / (1000 * 60 * 60 * 24));

  let level: 'fresh' | 'moderate' | 'stale' | 'unknown';
  let text: string;

  if (diffDays <= 7) {
    level = 'fresh';
    text = 'Verified recently';
  } else if (diffDays <= 30) {
    level = 'moderate';
    text = `Verified ${diffDays} days ago`;
  } else if (diffDays <= 90) {
    level = 'stale';
    text = `Verified ${Math.floor(diffDays / 30)} month${Math.floor(diffDays / 30) > 1 ? 's' : ''} ago`;
  } else {
    level = 'stale';
    const months = Math.floor(diffDays / 30);
    text = `Verified ${months > 12 ? '1+ year' : months + ' months'} ago`;
  }

  return { level, text, days: diffDays };
};

const freshness = getFreshnessInfo(lastUpdated);
---

{variant === 'minimal' && (
  <span class="freshness-badge freshness-badge-minimal freshness-{freshness.level}" title={freshness.text}>
    {hasComparablePricing ? (
      <>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="freshness-icon">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
        </svg>
      </>
    ) : (
      <>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="freshness-icon">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
        </svg>
      </>
    )}
  </span>
)}

{variant === 'compact' && (
  <div class={'freshness-badge freshness-badge-compact ' + (hasComparablePricing ? `freshness-${freshness.level}` : 'freshness-unverified')} title={freshness.text}>
    {hasComparablePricing ? (
      <>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="freshness-icon">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
        </svg>
        <span class="freshness-text">{freshness.text}</span>
      </>
    ) : (
      <>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="freshness-icon">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
        </svg>
        <span class="freshness-text">Pricing unverified</span>
      </>
    )}
  </div>
)}

{variant === 'full' && (
  <div class={'freshness-badge freshness-badge-full ' + (hasComparablePricing ? `freshness-${freshness.level}` : 'freshness-unverified')}>
    <div class="freshness-header">
      {hasComparablePricing ? (
        <>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="freshness-icon">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z" clip-rule="evenodd" />
          </svg>
          <span class="freshness-label">Verified Pricing</span>
        </>
      ) : (
        <>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="freshness-icon">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
          </svg>
          <span class="freshness-label">Pricing Unverified</span>
        </>
      )}
    </div>
    <div class="freshness-details">
      <p class="freshness-status">{freshness.text}</p>
      {lastUpdated && (
        <p class="freshness-date">Last updated: {new Date(lastUpdated).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
      )}
      {hasComparablePricing ? (
        <p class="freshness-note">This provider has comparable $/GB pricing verified from official sources.</p>
      ) : (
        <p class="freshness-note">This provider's pricing could not be normalized for comparison.</p>
      )}
    </div>
  </div>
)}

<style>
  .freshness-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    border-radius: 9999px;
  }

  .freshness-icon {
    width: 1rem;
    height: 1rem;
    flex-shrink: 0;
  }

  /* Compact variant */
  .freshness-badge-compact {
    padding: 0.375rem 0.875rem;
    font-weight: 600;
  }

  .freshness-badge-compact.freshness-fresh {
    background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
    color: #065f46;
  }

  .freshness-badge-compact.freshness-moderate {
    background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
    color: #92400e;
  }

