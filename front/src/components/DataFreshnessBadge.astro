    width: 1.125rem;
    height: 1.125rem;
  }

  .freshness-label {
    font-weight: 700;
    text-transform: uppercase;
    font-size: 0.75rem;
    letter-spacing: 0.05em;
  }

  .freshness-badge-full.freshness-fresh .freshness-label {
    color: #065f46;
  }

  .freshness-badge-full.freshness-moderate .freshness-label {
    color: #92400e;
  }

  .freshness-badge-full.freshness-stale .freshness-label {
    color: #9a3412;
  }

  .freshness-badge-full.freshness-unverified .freshness-label {
    color: #6b7280;
  }

  .freshness-details {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .freshness-status {
    font-weight: 600;
    margin: 0;
  }

  .freshness-badge-full.freshness-fresh .freshness-status {
    color: #047857;
  }

  .freshness-badge-full.freshness-moderate .freshness-status {
    color: #b45309;
