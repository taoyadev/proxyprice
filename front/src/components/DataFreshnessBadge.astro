      background: linear-gradient(135deg, #064e3b 0%, #065f46 100%);
      border-color: #047857;
    }

    .freshness-badge-full.freshness-moderate {
      background: linear-gradient(135deg, #78350f 0%, #92400e 100%);
      border-color: #b45309;
    }

    .freshness-badge-full.freshness-stale {
      background: linear-gradient(135deg, #7c2d12 0%, #9a3412 100%);
      border-color: #c2410c;
    }

    .freshness-badge-full.freshness-unverified {
      background: linear-gradient(135deg, #1f2937 0%, #374151 100%);
      border-color: #4b5563;
    }

    .freshness-badge-full.freshness-fresh .freshness-label,
    .freshness-badge-full.freshness-fresh .freshness-status {
      color: #d1fae5;
    }

    .freshness-badge-full.freshness-moderate .freshness-label,
    .freshness-badge-full.freshness-moderate .freshness-status {
      color: #fef3c7;
    }

    .freshness-badge-full.freshness-stale .freshness-label,
    .freshness-badge-full.freshness-stale .freshness-status {
      color: #fed7aa;
    }

    .freshness-badge-full.freshness-unverified .freshness-label,
    .freshness-badge-full.freshness-unverified .freshness-status {
      color: #d1d5db;
    }
  }
</style>
