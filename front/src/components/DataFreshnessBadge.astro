    background: linear-gradient(135deg, #fed7aa 0%, #fdba74 100%);
    color: #9a3412;
  }

  .freshness-badge-compact.freshness-unverified {
    background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
    color: #6b7280;
  }

  /* Minimal variant */
  .freshness-badge-minimal {
    padding: 0.25rem;
    background: transparent;
  }

  .freshness-badge-minimal.freshness-fresh .freshness-icon {
    color: #10b981;
  }

  .freshness-badge-minimal.freshness-moderate .freshness-icon {
    color: #f59e0b;
  }

  .freshness-badge-minimal.freshness-stale .freshness-icon {
    color: #f97316;
  }

  .freshness-badge-minimal.freshness-unverified .freshness-icon {
    color: #9ca3af;
  }

  /* Full variant */
  .freshness-badge-full {
    flex-direction: column;
    align-items: flex-start;
    padding: 1rem 1.25rem;
    border-radius: 0.75rem;
    background: var(--color-bg-alt);
    border: 1px solid var(--color-border);
  }

  .freshness-badge-full.freshness-fresh {
    background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
    border-color: #a7f3d0;
  }

  .freshness-badge-full.freshness-moderate {
    background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%);
    border-color: #fde68a;
  }

  .freshness-badge-full.freshness-stale {
    background: linear-gradient(135deg, #fff7ed 0%, #fed7aa 100%);
    border-color: #fdba74;
  }

  .freshness-badge-full.freshness-unverified {
    background: linear-gradient(135deg, #f9fafb 0%, #f3f4f6 100%);
    border-color: #e5e7eb;
  }

  .freshness-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

