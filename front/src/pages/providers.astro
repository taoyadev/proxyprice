---
import BaseLayout from '../layouts/BaseLayout.astro';
import ComparisonTable from '../components/ComparisonTable.astro';
import TrustBadge from '../components/TrustBadge.astro';
import pricingData from '../data/pricing.json';
import providersData from '../data/providers.json';
---

<BaseLayout
  title="All Providers"
  description="Compare all proxy providers in one place. View pricing, features, and trial offers from 40+ providers."
>
  <div class="container" style="padding: 3rem 0;">
    <header class="page-header">
      <div class="header-content">
        <div>
          <h1>All Proxy Providers</h1>
          <p class="page-subtitle">
            Complete listing of all proxy providers with transparent pricing comparison.
          </p>
          <p class="page-note">
            By default we show comparable <strong>$/GB</strong> pricing. Uncheck "Comparable only" to view non-comparable models (per IP / per proxy / per thread).
          </p>
        </div>
        <TrustBadge lastUpdated={pricingData.last_updated} variant="full" providerCount={providersData.total_count} />
      </div>
    </header>

    <ComparisonTable />
  </div>
</BaseLayout>

<style>
  .page-header {
    margin-bottom: 3rem;
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 2rem;
  }

  .header-content > div {
    flex: 1;
  }

  .page-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-light);
    max-width: 700px;
    margin: 1rem 0 0;
  }

  .page-note {
    margin-top: 0.75rem;
    font-size: 0.95rem;
    color: var(--color-text-light);
    max-width: 700px;
  }

  @media (max-width: 768px) {
    .header-content {
      flex-direction: column;
    }
  }
</style>
