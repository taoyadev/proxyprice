---
import BaseLayout from '../../layouts/BaseLayout.astro';
import providersData from '../../data/providers.json';
import { SITE_NAME } from '../../lib/site';

// Count providers by tier

const breadcrumbs = [
  { name: SITE_NAME, url: new URL('/', Astro.site).toString() },
  { name: 'Pricing Tiers', url: new URL('/pricing/', Astro.site).toString() },
];

// Count providers by tier
const countUnder1GB = providersData.providers.filter(
  p => p.cheapest_price_per_gb !== null && p.cheapest_price_per_gb < 1
).length;

const countBudget = providersData.providers.filter(
  p => p.cheapest_price_per_gb !== null && p.cheapest_price_per_gb <= 3
).length;

const countTrial = providersData.providers.filter(
  p => p.trial_offer !== null
).length;
---

<BaseLayout
  title="Proxy Pricing Tiers"
  description="Find proxy providers by pricing tier. Browse budget proxies, under $1/GB options, and providers with free trials."
  breadcrumbs={breadcrumbs}
>
  <div class="container" style="padding: 3rem 0;">
    <header class="page-header">
      <h1>Proxy Pricing Tiers</h1>
      <p class="page-subtitle">
        Find proxy providers that match your budget. Browse by pricing tier or look for providers offering free trials to test before you buy.
      </p>
    </header>

    <div class="pricing-tiers-grid">
      <a href="/pricing/under-1-per-gb/" class="pricing-tier-card featured">
        <div class="tier-badge">Best Value</div>
        <div class="tier-icon">üí∞</div>
        <h2>Under $1/GB</h2>
        <p>Find affordable proxy providers with pricing under $1 per GB. The sweet spot for most users.</p>
        <div class="tier-stats">
          <span class="stat">{countUnder1GB} providers</span>
        </div>
      </a>

      <a href="/pricing/budget-proxies/" class="pricing-tier-card">
        <div class="tier-icon">üè∑Ô∏è</div>
        <h2>Budget Proxies</h2>
        <p>Compare the most affordable proxy providers. Great for testing and development.</p>
        <div class="tier-stats">
          <span class="stat">{countBudget} providers</span>
        </div>
      </a>

      <a href="/pricing/free-trial-proxies/" class="pricing-tier-card">
        <div class="tier-icon">üéÅ</div>
        <h2>Free Trial Providers</h2>
        <p>Test proxy services risk-free before committing. Find providers with free trials.</p>
        <div class="tier-stats">
          <span class="stat">{countTrial} providers</span>
        </div>
      </a>
    </div>

    <section class="info-section">
      <h2>Choosing the Right Pricing Tier</h2>
      <div class="info-grid">
        <div class="info-card">
          <h3>Under $1/GB</h3>
          <p>Ideal for most users. This tier offers reliable service from established providers without premium pricing. Perfect for startups and growing operations.</p>
          <p><strong>Best for:</strong> Regular web scraping, SEO monitoring, ad verification</p>
        </div>
        <div class="info-card">
          <h3>Budget Proxies</h3>
          <p>Maximum value for cost-conscious users. These providers optimize infrastructure costs while maintaining acceptable service levels.</p>
          <p><strong>Best for:</strong> Testing, learning, non-critical automation</p>
        </div>
        <div class="info-card">
          <h3>Free Trials</h3>
          <p>Before investing, test providers to verify performance for your specific use case. Essential for finding the right match.</p>
          <p><strong>Best for:</strong> Evaluating providers before commitment</p>
        </div>
      </div>
    </section>

    <section class="cta-section">
      <h2>Not Sure What You Need?</h2>
      <p>Use our price calculator to find the best provider based on your bandwidth requirements.</p>
      <a href="/calculator" class="btn btn-primary">Use Price Calculator</a>
    </section>
  </div>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .page-subtitle {
    font-size: 1.125rem;
    color: var(--color-text-light);
    max-width: 700px;
    margin: 0 auto;
  }

  .pricing-tiers-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .pricing-tier-card {
    background: var(--color-bg);
    border: 2px solid var(--color-border);
    border-radius: 0.75rem;
    padding: 2rem;
    text-decoration: none;
    color: var(--color-text);
    transition: all 0.2s;
    position: relative;
    display: flex;
    flex-direction: column;
  }

  .pricing-tier-card:hover {
    border-color: var(--color-primary);
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .pricing-tier-card.featured {
    border-color: var(--color-secondary);
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.05) 0%, var(--color-bg) 100%);
  }

  .pricing-tier-card.featured:hover {
    border-color: var(--color-secondary);
  }

  .tier-badge {
    position: absolute;
    top: -0.75rem;
    left: 1.5rem;
    background: var(--color-secondary);
    color: white;
    padding: 0.35rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .tier-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .pricing-tier-card h2 {
    margin-bottom: 0.75rem;
    font-size: 1.5rem;
  }

  .pricing-tier-card p {
    color: var(--color-text-light);
    font-size: 0.875rem;
    margin-bottom: 1rem;
    flex: 1;
  }

  .tier-stats {
    display: flex;
    gap: 1rem;
  }

  .stat {
    padding: 0.375rem 0.75rem;
    background: var(--color-bg-alt);
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--color-primary);
  }

  .info-section {
    margin-bottom: 4rem;
  }

  .info-section h2 {
    text-align: center;
    margin-bottom: 2rem;
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .info-card {
    background: var(--color-bg-alt);
    border-radius: 0.75rem;
    padding: 1.5rem;
  }

  .info-card h3 {
    margin-bottom: 0.75rem;
    font-size: 1.125rem;
  }

  .info-card p {
    color: var(--color-text-light);
    font-size: 0.875rem;
    line-height: 1.6;
    margin-bottom: 0.5rem;
  }

  .info-card p:last-child {
    margin-bottom: 0;
  }

  .info-card strong {
    color: var(--color-text);
  }

  .cta-section {
    text-align: center;
    background: var(--color-bg-alt);
    border-radius: 0.75rem;
    padding: 3rem;
  }

  .cta-section h2 {
    margin-bottom: 0.75rem;
  }

  .cta-section p {
    color: var(--color-text-light);
    margin-bottom: 1.5rem;
  }

  .btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    transition: all 0.2s;
    text-decoration: none;
  }

  .btn-primary {
    background: var(--color-primary);
    color: white;
  }

  .btn-primary:hover {
    background: var(--color-primary-dark);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.3);
  }

  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .pricing-tiers-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
